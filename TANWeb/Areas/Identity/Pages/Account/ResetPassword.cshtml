@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">

        function PasswordValidation() {
            var pswd = $('#TxtPassword').val().trim();
            var spcl = 0;
            var uppercase = 0;
            var lowercase = 0;
            var digit = 0;
            for (var i = 0; i < pswd.length; i++) {
                if (pswd.charCodeAt(i) >= 48 && pswd.charCodeAt(i) <= 57) {
                    digit++;
                }
                if (pswd.charCodeAt(i) >= 65 && pswd.charCodeAt(i) <= 90) {
                    uppercase++;
                }
                if (pswd.charCodeAt(i) >= 97 && pswd.charCodeAt(i) <= 127) {
                    lowercase++;
                }
                if (pswd.charCodeAt(i) >= 33 && pswd.charCodeAt(i) <= 47) {
                    spcl++;
                }
                if (pswd.charCodeAt(i) >= 58 && pswd.charCodeAt(i) <= 64) {
                    spcl++;
                }
                if (pswd.charCodeAt(i) >= 91 && pswd.charCodeAt(i) <= 96) {
                    spcl++;
                }
                if (pswd.charCodeAt(i) >= 123 && pswd.charCodeAt(i) <= 126) {
                    spcl++;
                }
            }
            if (digit > 0) {
                $('#txtdigitcase').removeClass('text-danger');
                $('#txtdigitcase').removeClass('ri-close-line');
                $('#txtdigitcase').addClass('ri-check-fill');
                $('#txtdigitcase').addClass('text-info');
            } else {
                $('#txtdigitcase').removeClass('ri-check-fill');
                $('#txtdigitcase').removeClass('text-info');
                $('#txtdigitcase').addClass('text-danger');
                $('#txtdigitcase').addClass('ri-close-line');
            }
            if (uppercase > 0) {
                $('#txtuppercase').removeClass('text-danger');
                $('#txtuppercase').removeClass('ri-close-line');
                $('#txtuppercase').addClass('ri-check-fill');
                $('#txtuppercase').addClass('text-info');
            } else {
                $('#txtuppercase').removeClass('ri-check-fill');
                $('#txtuppercase').removeClass('text-info');
                $('#txtuppercase').addClass('text-danger');
                $('#txtuppercase').addClass('ri-close-line');
            }
            if (lowercase > 0) {
                $('#txtlowercase').removeClass('text-danger');
                $('#txtlowercase').removeClass('ri-close-line');
                $('#txtlowercase').addClass('ri-check-fill');
                $('#txtlowercase').addClass('text-info');
            } else {
                $('#txtlowercase').removeClass('ri-check-fill');
                $('#txtlowercase').removeClass('text-info');
                $('#txtlowercase').addClass('text-danger');
                $('#txtlowercase').addClass('ri-close-line');
            }
            if (spcl > 0) {
                $('#txtspeclcase').removeClass('text-danger');
                $('#txtspeclcase').removeClass('ri-close-line');
                $('#txtspeclcase').addClass('ri-check-fill');
                $('#txtspeclcase').addClass('text-info');
            } else {
                $('#txtspeclcase').removeClass('ri-check-fill');
                $('#txtspeclcase').removeClass('text-info');
                $('#txtspeclcase').addClass('text-danger');
                $('#txtspeclcase').addClass('ri-close-line');
            }
            if (pswd.length >= 8 && pswd.length <= 30) {
                $('#txtlencase').removeClass('text-danger');
                $('#txtlencase').removeClass('ri-close-line');
                $('#txtlencase').addClass('ri-check-fill');
                $('#txtlencase').addClass('text-info');
            } else {
                $('#txtlencase').addClass('text-danger');
                $('#txtlencase').addClass('ri-close-line');
                $('#txtlencase').removeClass('ri-check-fill');
                $('#txtlencase').removeClass('text-info');
            }
        }
    </script>
}
