@{
    var mylayout = Context.Session.GetString("SelectedApp");
    if (mylayout != "Inventory" && mylayout != "Reporting")
    {
        Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    }
    else if (mylayout != "Inventory" || mylayout == "Reporting")
    {
        Layout = "~/Views/Shared/_LayoutTelecom.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutInventory.cshtml";
    }
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="page-breadcrumb pt-2">
        <div class="row">
            <div class="col-5 align-self-center">
                <h4 class="page-title">Help Documents</h4>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/pbjsnap/dashboard">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Help</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid main-content-height pt-0">
        <div class="row">
            <div class="col-xl-12">
                <h4>
                    <a href="javascript:void(0);" data-bs-toggle='tooltip' data-bs-placement='top' title='Click here to open / close file' class="text-info" onclick="loadDocument()">How to Use PBJSNAP Application Guide.</a>
                    <i class="fa fa-file-pdf text-danger ps-2" aria-hidden="true"></i>
                    <a href="@ViewBag.FilePath" download class="btn text-info ms-2" data-bs-toggle='tooltip' data-bs-placement='top' title='Download Document'>
                        <i class="fa fa-download" aria-hidden="true"></i> Download
                    </a>
                    <button id="btnclose" type="button" class="btn-close d-none d-flex float-end" data-bs-toggle='tooltip' data-bs-placement='top' title='Click here to close document view' aria-label="Close" onclick="hideDocument()"></button>
                </h4>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12" id="iframeContainer" style="display: none;">
                <iframe id="pdfIframe" style="width: 100%; height: 500px;"></iframe>
            </div>
        </div>
    </div>
</body>
</html>

<script>
    function loadDocument() {
        var iframeContainer = document.getElementById("iframeContainer");
        var pdfIframe = document.getElementById("pdfIframe");

        if (pdfIframe.getAttribute("src") === null) {
            // Load the PDF when the link is clicked for the first time
            pdfIframe.setAttribute("src", "@ViewBag.FilePath");
            iframeContainer.style.display = "block";
            $('#btnclose').removeClass('d-none');
        } else {
            $('#iframeContainer').slideToggle();
            if (!$('#btnclose').hasClass('d-none')) {
                $('#btnclose').addClass('d-none');
            }
            else {
                $('#btnclose').removeClass('d-none');
            }
        }
    }

    function hideDocument() {
        $('#iframeContainer').slideToggle();
        $('#btnclose').addClass('d-none');
    }
</script>
