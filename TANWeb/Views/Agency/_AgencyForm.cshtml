@model TAN.DomainModels.ViewModels.AgencyViewModel
<head>
</head>

<div class="page-content">
    <div class="container-fluid">
        <form id="addAgencyForm" method="Post" asp-antiforgery="true">
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" id="Id" />
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group mb-2">
                        <label asp-for="AgencyId" class="control-label">Agency Id <span class="text-danger">*</span></label>
                        <input asp-for="AgencyId" class="form-control" id="agencyId" onkeypress="return isAlphaNumericOnly(event)" onblur="checkForUniqueAgencyId()" />
                        <span asp-validation-for="AgencyId" class="text-danger errormsg" id="agencyId_Error"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group mb-2">
                        <label asp-for="AgencyName" class="control-label">Agency Name <span class="text-danger">*</span></label>
                        <input asp-for="AgencyName" class="form-control" id="agencyName" onkeypress="return isAlphaNumeric(event)" onblur="validateInputOnBlur(this)" />
                        <span asp-validation-for="AgencyName" class="text-danger errormsg" id="AgencyName_Error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group mb-2">
                        <label asp-for="Address1" class="control-label">Address 1 <span class="text-danger">*</span></label>
                        <input asp-for="Address1" class="form-control" id="agencyAddress1" onkeydown="restrictSpecialChars(event)"/>
                        <span asp-validation-for="Address1" class="text-danger errormsg"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group mb-2">
                        <label asp-for="Address2" class="control-label"></label>
                        <input asp-for="Address2" class="form-control" id="agencyAddress2" onkeydown="restrictSpecialChars(event)"/>
                        <span asp-validation-for="Address2" class="text-danger errormsg"></span>
                    </div>
                </div>
            </div>
            <div class="row custom-select-arrow">
                <div class="col-lg-6">
                    <div class="form-group mb-2">
                        <label asp-for="City" class="control-label">City <span class="text-danger">*</span></label>
                        <input asp-for="City" class="form-control" id="agencyCity" onkeydown="restrictInput(event)"/>
                        <span asp-validation-for="City" class="text-danger errormsg"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div id="selectDivState" class="form-group mb-2">
                        <label asp-for="State" class="control-label">State <span class="text-danger">*</span></label>
                        <select asp-for="State" id="agencyState" class="select2" asp-items="@(new SelectList(Model.StateList, "StateCode", "StateName"))">
                        </select>
                        <span asp-validation-for="State" class="text-danger errormsg"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group mb-2">
                        <label asp-for="ZipCode" class="control-label">Zip Code <span class="text-danger">*</span></label>
                        <input asp-for="ZipCode" class="form-control" id="agencyZipCode" onkeydown="allowOnlyDigits(event)" />
                        <span asp-validation-for="ZipCode" class="text-danger errormsg"></span>
                    </div>
                </div>
                <div class="col-lg-6 custom-select-arrow">
                    <div id="facilityIdSelectDiv" class="form-group mb-2">
                        <label asp-for="FacilityId" class="control-label">Facility Name <span class="text-danger">*</span></label>
                        @* <select asp-for="FacilityId" id="agencyFacilityName" placeholder="Select Facility Name" class="select2" multiple="Multiple" asp-items="@(new SelectList(Model.FacilityList, "Value", "Text"))"> *@
                        <select asp-for="FacilityId" id="agencyFacilityName" placeholder="Select Facility Name" class="select2" multiple="Multiple">
                            @foreach (var item in Model.FacilityList)
                            {
                                <option value="@item.Id">@item.FacilityName</option>
                            }
                        </select>
                        <span asp-validation-for="FacilityId" class="text-danger errormsg"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer py-0 pe-0">
                <button type="submit" class="btn waves-effect waves-light btn-info m-0" id="btnSaveAgency">Save</button>
                <button type="submit" class="btn waves-effect waves-light btn-info m-0" style="display:none" id="btnUpdateAgency">Update</button>
                <button type="button" class="btn btn-secondary m-0 ms-2" id="btnClose" data-bs-dismiss="modal">Close</button>
            </div>
        </form>
    </div>
</div>

