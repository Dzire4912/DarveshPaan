@using TAN.DomainModels.ViewModels;
@using TAN.DomainModels.Helpers;
@model EmailTemplateViewModel
<html>
    <head>
    <link href="~/css/ta-style.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/datatables.net-bs4/css/datatables.bootstrap4.min.css" rel="stylesheet" />
    </head>
    <body>
        <div class="row">
        <div class="card">
            <div class="card-body">
                <div width="100%" class="email-card-wrapper-main">
                    <div style="max-width: 700px; padding: 50px 0; margin: 0px auto; font-size: 14px">

                        <table border="0" cellpadding="0" cellspacing="0" style="background: #f8f8f8;width: 100%;border-left: 1px solid #e9e9e9; border-right: 1px solid #e9e9e9; border-top:4px solid #009ade; border-bottom:4px solid #009ade;">
                            <tbody>
                                <!-- start row -->
                                <tr>
                                    <td style="padding:13px 20px; text-align: left">
                                        <div style="width:100%;box-sizing: border-box; text-align: left; float:left;">

                                            <div style="width:150px;float:left">
                                                <a href="#" target="_blank">
                                                    <img data-imagetype="External" src="@Model.LogoPath" originalsrc="@Model.LogoPath" alt="logo1" border="0" width="100" height="30">
                                                </a>
                                            </div>
                                            <div style="float:right;padding:13px 20px;">
                                                <p style="margin:0px; color: #55565a;"><strong>TFA One-time Password Verification</strong></p>
                                            </div>
                                        </div>

                                    </td>

                                </tr>
                                <!-- end row -->
                            </tbody>
                        </table>
                        <div style="padding:25px 33px; background: #fff;border-left: 1px solid #e9e9e9; border-right: 1px solid #e9e9e9;">
                            <table border="0" cellpadding="0" cellspacing="0" style="width: 100%">
                                <tbody>
                                    <!-- start row -->
                                    <tr>
                                        <td style="padding:13px 0px 18px; text-align:center;">
                                            <img data-imagetype="External" src="@Model.OtpPath" originalsrc="@Model.OtpPath" alt="otp" border="0" width="64" height="64">
                                        </td>

                                    </tr>
                                    <tr>
                                        <td>
                                            <p style="font-size:18px;margin-bottom:6px; color: #333333;"> <strong>Hello @Model.UserName</strong>,</p>
                                            <p style="margin:0 0 5px; color:#333333;">
                                                Use the One-time Passcode to finish logging in.
                                            </p>
                                            <p style="margin:0;font-size:1.5em; color:#333333;">
                                                <b>@Model.Otp</b>
                                            </p>
                                            <p style="line-height: 140%;margin:12px 0 0; color:#333333;">
                                                If that doesn’t
                                                work, click Resend
                                                One-time Passcode
                                                to generate a new
                                                passcode.
                                            </p>
                                            <p style="line-height: 140%; word-break: break-all;margin:0 0 15px"><a href="#" target="_blank" rel="noopener"><span style="text-decoration: underline;line-height: 19.6px;"></span></a></p>
                                            <p style="margin:0; color: #333333;">Regards,</p>
                                            <p style="margin:0; color: #333333;"><strong>Think Anew</strong></p>
                                        </td>
                                    </tr>
                                    <!-- end row -->
                                </tbody>
                            </table>
                        </div>
                        <div style="padding:13px 20px;border-top: 1px solid #e9e9e9;border-bottom: 1px solid #e9e9e9;border-left: 1px solid #e9e9e9; border-right: 1px solid #e9e9e9;background: #f8f8f8;text-align:center; font-size: 12px; color: #b2b2b5; margin-top:0px">
                            <p style="margin:0; color:#333333;">
                                Powered by Think Anew
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
</html>
