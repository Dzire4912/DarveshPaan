@model IEnumerable<TAN.DomainModels.ViewModels.DashboardFacilityViewModel>

<h4 class="card-title">Facilities</h4>
<div class="carousel slide facilities-carousel" data-bs-ride="carousel" id="carouselExampleControlsNoTouching"
     data-bs-touch="false"
     data-bs-interval="false">
            <!-- Slides -->
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Count(); i +=3) { <div class="carousel-item @(i == 0 ? " active" : "" )">
                <div class="row facilities-cards">
                    <div class="d-flex">
                        @foreach (var item in Model.Skip(i).Take(3))
                        {
                        <div class="col-md-6 col-lg-4">
                                <div class="card m-2 card-box-shadow card-hover">
                                <!-- Card content here -->
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <h4 class="card-title mb-0">@item.FacilityName</h4>
                                        <div class="ms-auto">
                                            <span class="fs-3 font-medium">( @item.Employees )</span>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center my-3">
                                        <div class="border-end pe-3">
                                            <h6 class="text-dark  fw-medium">Exempt</h6>
                                            <b>@item.Exempt</b>
                                        </div>
                                        <div class="ms-3 border-end pe-3">
                                            <h6 class="text-dark fw-medium">Non Exempt</h6>
                                            <b>@item.NonExempt</b>
                                        </div>
                                        <div class="ms-3">
                                            <h6 class="text-dark fw-medium">Contract</h6>
                                            <b>@item.Contract</b>
                                        </div>
                                    </div>
                                        <div class="mt-auto">
                                        <a href="/PBJSnap/Review/Index?Id=@item.Id"
                                        class="btn btn-primary text-light font-medium">Review</a>
                                        </div>
                                </div> 
                            </div>
                        </div>
                        }
                        </div>
                    </div>
            </div>
            }
        </div>

        <button class="carousel-control-prev"
            type="button"
            data-bs-target="#carouselExampleControlsNoTouching"
            data-bs-slide="prev">

        <span class="visually-hidden">Previous</span>
        <i class="ri-arrow-left-circle-fill text-dark carousel-icons"></i>
    </button>
        <button class="carousel-control-next"
            type="button"
            data-bs-target="#carouselExampleControlsNoTouching"
            data-bs-slide="next">
        <span class="visually-hidden">Next</span>
        <i class="ri-arrow-right-circle-fill text-dark carousel-icons"></i>
    </button>

    </div>
