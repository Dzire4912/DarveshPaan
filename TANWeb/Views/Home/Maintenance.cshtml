@{
    var mylayout = Context.Session.GetString("SelectedApp");
    if (mylayout != "Inventory" && mylayout != "Reporting")
    {
        Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    }
    else if (mylayout != "Inventory" || mylayout == "Reporting")
    {
        Layout = "~/Views/Shared/_LayoutTelecom.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutInventory.cshtml";
    }
}
<div class="row maintenance">
    <div class="col-lg-12 maintenance-col">

        <h1 style="font-size: 50px;" class="text-info">We&rsquo;ll be back soon!</h1>
            <div>
                <p class="text-dark" style="font-size:20px;">Sorry for the inconvenience but we&rsquo;re performing some maintenance at the moment. If you need to you can always <a href="#">contact us</a>, otherwise we&rsquo;ll be back online shortly!</p>
            </div>
        
    </div>
</div>

<style>
    .maintenance{
        height: 90vh;
        justify-content: center;
        display: flex;
        text-align: center;
        padding: 80px;
        font: 20px Helvetica, sans-serif;
        color: #efe8e8;
        align-items: center;
    }
    .maintenance-col{
        display: block;
        text-align: left;
        max-width: 650px;
        margin: 0 auto;
    }
</style>