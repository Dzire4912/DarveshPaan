@model IEnumerable< TAN.DomainModels.ViewModels.Blog>
<div class="row mt-3">
    <div class="col-lg-12">
        <h4 class="card-title">CMS Feed</h4>
        <div class="row d-flex flex-row flex-nowrap overflow-auto">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                    <div class="card m-2 card-box-shadow card-hover">
                        <div class="card-body">
                            <div class="d-flex no-block align-items-center mb-3">
                                <span class="d-flex align-items-center">
                                    <i class="ri-calendar-line me-1 align-bottom"></i> Date: @item.date
                                </span>

                            </div>
                            <h3 class="font-medium cms-title">
                                @item.Title
                            </h3>
                            <p class="mb-0 mt-2 text-muted cms-title">
                                @item.Description
                            </p>
                            <div class="text-end">
                                <button class="btn btn-primary waves-effect waves-light mt-3">
                                    Go to blog
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

