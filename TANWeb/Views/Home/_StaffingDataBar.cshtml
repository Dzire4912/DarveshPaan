@model TAN.DomainModels.Entities.ChartData

<h4 class="card-title">Staffing Data</h4>
<div id="StaffingBar"></div>
<div class="row gy-3 mb-2 custom-select-arrow">
    <div class="col-xxl-3 col-lg-4 col-xl-3 col-md-3 col-sm-12">
        <div>
            <label for="placeholderInput" class="form-label">Organization <span class="text-danger">*</span></label>
            <select id="SOrg" onchange="LoadfilteredStaffingData()" class="form-select sm-3">
                <option value="0">Select Organization</option>
                @foreach (var option in ViewBag.Organization)
                {
                    <option value="@option.Value">@option.Text</option>
                }
            </select>
        </div>
    </div>
    <div class="col-xxl-3 col-lg-3 col-xl-3 col-md-3 col-sm-12">
        <div>
            <label for="placeholderInput" class="form-label">Facility</label>
            <select id="SFacilities" onchange="LoadfilteredStaffingData()" class="form-select sm-3">
                <option value="0">Select Facility</option>
                @foreach (var option in ViewBag.Facility)
                {
                    <option value="@option.Value">@option.Text</option>
                }
            </select>
        </div>
    </div>
    <div class="col-xxl-3 col-lg-3 col-xl-3 col-md-3 col-sm-12">
        <div>
            <label for="placeholderInput" class="form-label">Year <span class="text-danger">*</span></label>
            <select id="Syear" onchange="LoadfilteredStaffingData()" class="form-select sm-3">
                <option value="0">Select Year</option>
                @foreach (var option in ViewBag.Year)
                {
                    <option value="@option.Value">@option.Text</option>
                }
            </select>
        </div>
    </div>
    <div class="col-xxl-3 col-lg-2 col-xl-3 col-md-3 col-sm-12 d-flex align-items-end">
        <div class="d-flex gap-1 flex-wrap">
            <button class="btn btn-secondary d-flex justify-content-center align-items-center px-2 py-1" id="staff"
                    onclick="resetstaff()">
                <i class="ri-refresh-line fs-5"></i>
            </button>
        </div>
    </div>
</div>
                    

<script>
    var partialViewModel = @Html.Raw(Json.Serialize(Model));
    //generateBarChart(partialViewModel.data, partialViewModel.labels, "StaffingBar");
    GenerateAreaApex(partialViewModel.data, partialViewModel.labels, "StaffingBar");
</script>