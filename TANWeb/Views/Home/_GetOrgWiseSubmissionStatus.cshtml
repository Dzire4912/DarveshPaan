@model TAN.DomainModels.Entities.ChartData

<h4 class="card-title" >Submission Status </h4>
        <div id="SubmissionBar"></div>
<div class="row gy-3 custom-select-arrow">
            <div class="col-xxl-9 col-lg-9 col-xl-4 col-md-9 col-sm-8">
                <div class="overlap-input-field">
                    <label for="placeholderInput" class="form-label">Organization <span class="text-danger">*</span></label>

                    <select id="SubOrg" onchange="LoadfilteredSubmissionSatus()" class="form-select sm-3">

                        <option value="0">Select Organization</option>

                        @foreach (var option in ViewBag.Organization)

                        {

                            <option value="@option.Value">@option.Text</option>

                        }

                    </select>
                </div>
            </div>
            <div class="col-xxl-3 col-lg-3 col-xl-4 col-md-3 col-sm-4 d-flex align-items-end">
                <div class="d-flex gap-1 flex-wrap">
            <button class="btn btn-secondary d-flex justify-content-center align-items-center px-2 py-1" data-bs-toggle='tooltip' data-bs-placement='top' title='Refresh' id="staff" onclick="resetsubStatus()"><i class="ri-refresh-line fs-5"></i></button>
                </div>

            </div>
        </div>

<script>

    var partialViewModel = @Html.Raw(Json.Serialize(Model));

    // generateBarChart(partialViewModel.data, partialViewModel.labels, "StaffingBar");

    //generateLineApex(partialViewModel.data, partialViewModel.labels, "StaffingBar");

    GenerateMultiradialChart(partialViewModel.data, partialViewModel.labels, "SubmissionBar");





</script>