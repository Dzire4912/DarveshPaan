@model IEnumerable< TAN.DomainModels.ViewModels.Itemlist>

<h4 class="card-title">Labour Codes</h4>
<div class="row gy-3 custom-select-arrow">
    <div class="col-xxl-3 col-lg-3 col-xl-4 col-md-6">
        <div>
            <label for="placeholderInput" class="form-label">Facility <span class="text-danger">*</span></label>
            <select id="facilities" onchange="loadfilteredLabour()" class="form-select sm-3">
                <option value="">Select facility</option>
                @foreach (var option in ViewBag.FacilityList)
                {
                    <option value="@option.Value">@option.Text</option>
                }
            </select>
        </div>
    </div>
    <div class="col-xxl-3 col-lg-3 col-xl-4 col-md-6">
        <div>
            <label for="placeholderInput" class="form-label">Fiscal Quarter</label>
            <select id="fiscal" onchange="loadfilteredLabour()" class="form-select sm-3">
                <option value="0" selected>Fiscal Quarter</option>
                <option value="1">1st Quarter</option>
                <option value="2">2nd Quarter</option>
                <option value="3">3rd Quarter</option>
                <option value="4">4th Quarter</option>
            </select>
        </div>
    </div>
    <div class="col-xxl-3 col-lg-2 col-md-4">
        <div>
            <label for="placeholderInput" class="form-label">Year <span class="text-danger">*</span></label>
            <select id="year" onchange="loadfilteredLabour()" class="form-select sm-3">
                <option value="0" selected>Year</option>
                <option value="1">2023</option>
                <option value="2">2022</option>
                <option value="3">2021</option>
            </select>
        </div>
    </div>
   @*  <div class="col-xxl-3 col-lg-2 col-md-4">
        <div>
            <label for="placeholderInput" class="form-label">Quarter <span class="text-danger">*</span></label>
            <select id="month" onchange="loadfilteredLabour()" class="form-select sm-3">
                <option value="0" selected>Monthly</option>
                <option value="1">Daily</option>
                <option value="2">Weekly</option>
                <option value="3">Yearly</option>
            </select>
        </div>
    </div> *@
    <div class="col-xxl-3 col-lg-2 col-xl-3 col-md-4 col-sm-12 d-flex align-items-end">
        <div class="d-flex gap-1 flex-wrap">
            <button class="btn btn-secondary d-flex justify-content-center align-items-center px-2 py-1" onclick="ResetLabourcodeTable()">
                <i class="ri-refresh-line fs-5"></i>
            </button>
        </div>
    </div>
</div>
<div class="table-responsive mt-3 dashboard-tables">
    <table class="table display table-bordered table-striped no-wrap mb-0">
        <thead>
            <!-- start row -->
            <tr>
                <th>Labour Code</th>
                <th># of Employees </th>

            </tr>
            <!-- end row -->
        </thead>
        <tbody>
            <!-- start row -->
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Text</td>
                    <td>@item.Value</td>
                </tr>
            }
        </tbody>
    </table>
</div>


